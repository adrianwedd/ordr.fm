{
  "name": "ordr.fm Music Analytics",
  "short_name": "ordr.fm",
  "description": "Professional music collection analytics and organization dashboard",
  "version": "2.1.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#667eea",
  "background_color": "#ffffff",
  "categories": ["music", "utilities", "entertainment"],
  "lang": "en",
  "dir": "ltr",
  "scope": "/",
  "icons": [
    {
      "src": "icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-96x96.png", 
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-128x128.png",
      "sizes": "128x128", 
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Collection Health",
      "short_name": "Health",
      "description": "View collection health metrics",
      "url": "/#health",
      "icons": [
        {
          "src": "icons/health-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Duplicate Analysis", 
      "short_name": "Duplicates",
      "description": "Analyze duplicate content",
      "url": "/#duplicates",
      "icons": [
        {
          "src": "icons/duplicates-96x96.png", 
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Advanced Insights",
      "short_name": "Insights", 
      "description": "View collection insights",
      "url": "/#insights",
      "icons": [
        {
          "src": "icons/insights-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST", 
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "playlist",
          "accept": [".m3u", ".pls", ".xspf"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+ordrfm",
      "url": "/?action=%s"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}