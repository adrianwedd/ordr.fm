{
  "name": "ordr-fm-visualizer",
  "version": "1.0.0",
  "description": "Visualization dashboard for ordr.fm music organization",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "prod": "NODE_ENV=production PM2_HOME=/tmp/.pm2 pm2 start server.js --name ordr-fm-viz",
    "stop": "PM2_HOME=/tmp/.pm2 pm2 stop ordr-fm-viz",
    "restart": "PM2_HOME=/tmp/.pm2 pm2 restart ordr-fm-viz",
    "logs": "PM2_HOME=/tmp/.pm2 pm2 logs ordr-fm-viz",
    "status": "PM2_HOME=/tmp/.pm2 pm2 status",
    "test": "npm run lint && npm run test:syntax && npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:all": "jest --coverage",
    "test:watch": "jest --watch",
    "test:syntax": "node -c server.js && echo 'Server syntax check passed'",
    "test:e2e": "npx playwright test",
    "test:e2e:ci": "CI=true npx playwright test",
    "test:e2e:local": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:report": "npx playwright show-report",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run lint && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "create-test-db": "./create_test_db.sh",
    "build": "echo 'PWA build complete - static assets ready'",
    "health-check": "curl -f http://localhost:3001/api/health || exit 1"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "chart.js": "^4.4.1",
    "d3": "^7.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@jest/globals": "^30.0.5",
    "@playwright/test": "^1.54.2",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "nodemon": "^3.0.2",
    "playwright": "^1.54.2",
    "pm2": "^6.0.8",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
